{
  "name": "@tbcm/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "echo \"Building @tbcm/api\" && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "nest start --exec \"node -r ./env.js\"",
    "start:dev": "nest start --watch",
    "start:dev:local": "nest start --preserveWatchOutput --watch --exec \"node -r ./env.js\"",
    "start:debug": "nest start --debug --watch",
    "start:debug:local": "nest start --debug --watch --exec \"node -r ./env.js\"",
    "start:prod": "node dist/main",
    "lint": "echo 'Linting @tbcm/api...' && eslint --fix --cache \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./jest-e2e.json --runInBand",
    "typeorm": "typeorm-ts-node-commonjs ",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/ormconfig.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/ormconfig.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/ormconfig.ts",
    "db:seed-care-activities": "SEED_TYPE=SEED_CARE_ACTIVITIES ts-node ./src/database/scripts/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.887.0",
    "@aws-sdk/s3-request-presigner": "3.887.0",
    "@nestjs/axios": "4.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/swagger": "7.4.2",
    "@nestjs/typeorm": "11.0.0",
    "@tbcm/common": "1.0.1",
    "@types/jsonwebtoken": "8.5.8",
    "@vendia/serverless-express": "4.3.11",
    "axios": "1.12.0",
    "class-transformer": "0.5.1",
    "csv-parser": "3.0.0",
    "csv-stringify": "6.0.4",
    "dotenv": "16.4.5",
    "express": "5",
    "handlebars": "4.7.7",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "2.0.5",
    "keycloak-connect": "22.0.5",
    "lodash": "4.17.21",
    "nanoid": "3.3.8",
    "nest-keycloak-connect": "1.10.1",
    "nest-winston": "1.9.4",
    "pg": "8.11.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.3.1",
    "rxjs": "7.2.0",
    "swagger-ui-express": "5.0.0",
    "typeorm": "0.3.20",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@types/aws-lambda": "8.10.84",
    "@types/express": "5",
    "@types/js-yaml": "4.0.5",
    "@types/multer": "1.4.11",
    "@types/node": "22.15.28",
    "@types/supertest": "2.0.11",
    "@types/zen-observable": "0.8.3",
    "eslint": "9.35.0",
    "jest": "29.7.0",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".\\**\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../test/setup.js"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@tbcm/common)/)"
    ]
  }
}
