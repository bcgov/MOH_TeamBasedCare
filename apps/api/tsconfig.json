{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "allowJs": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "paths": {
    "src": "./src"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "./env.js",
    "eslint.config.js",
    "../../eslint.config.js"
  ]
}
